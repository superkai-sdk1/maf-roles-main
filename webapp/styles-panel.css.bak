/* --- Winner Team Row --- */
.winner-team-row {
  display: flex;
  justify-content: center;
  gap: 18px;
  padding: 16px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: var(--radius-m);
  margin-bottom: 18px;
  border: 1px solid rgba(255, 255, 255, 0.05);
