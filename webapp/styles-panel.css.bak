  color: var(--text-secondary);
  font-weight: 700;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  padding: 4px;
}

.protocol-btn .player-num, .opinion-btn .player-num {
  font-size: 1.2em;
  margin: 0;
  width: auto;
  min-width: auto;
}

.protocol-btn .role-label, .opinion-btn .role-label {
  font-size: 0.7em;
  margin-top: 2px;
  opacity: 0.8;
}

.protocol-btn.role-peace, .opinion-btn.role-peace {
