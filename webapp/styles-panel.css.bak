}

.settings-btn i, .themes-btn i { font-size: 1.8em; transition: color 0.3s; }
.settings-btn:hover i, .themes-btn:hover i { color: #fff; }

/* --- Voting Modal Grid --- */
.modal-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
  width: 100%;
  max-width: 340px;
}

.modal-btn {
  aspect-ratio: 1;
  border-radius: 50%;
  border: 1px solid rgba(255,255,255,0.1);
  background: rgba(255,255,255,0.05);
  color: #fff;
  font-size: 1.6em;
  font-weight: 700;
  cursor: pointer;
