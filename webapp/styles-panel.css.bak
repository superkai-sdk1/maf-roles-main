  box-sizing: border-box;
  padding-top: 84px; /* Match players-list padding */
  padding-left: 16px;
  padding-right: 16px;
}

/* --- Utilities --- */
.text-ellipsis { white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.text-center { text-align: center; }
.text-center-input { text-align: center; }
.text-accent { color: var(--accent-color); }
.text-secondary { color: var(--text-secondary); }
.text-large { font-size: 1.1em; }
.text-white-bold { color: #fff; font-weight: 700; }
.font-bold { font-weight: 700; }
.mb-20 { margin-bottom: 20px; }
.mb-10 { margin-bottom: 10px; }
.mt-16 { margin-top: 16px; }
.mt-md { margin-top: 12px; }
.w-100 { width: 100%; }
.w-full { width: 100%; }
.z-high { z-index: 100000; }
.z-max { z-index: 99999; }
.flex-1 { flex: 1; }

/* Custom Scrollbar */
::-webkit-scrollbar { width: 6px; height: 6px; }
::-webkit-scrollbar-track { background: transparent; }
::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.2); border-radius: 10px; }
::-webkit-scrollbar-thumb:hover { background: rgba(255,255,255,0.4); }

/* --- Animations --- */
@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

/* --- Status Colors --- */
.player-row.killed .player-name,
.player-row.removed .player-name,
.player-row.voted .player-name,
.player-row.tech-fall-removed .player-name,
.player-row.fall-removed .player-name {
  text-decoration: line-through;
  text-decoration-color: rgba(255, 69, 58, 0.8);
  text-decoration-thickness: 2px;
  opacity: 0.7;
}

/* Inactive State */
.player-row.player-inactive {
  opacity: 0.5;
  filter: grayscale(0.8);
  transition: opacity 0.5s, filter 0.5s;
  pointer-events: auto !important;
  cursor: pointer !important;
  touch-action: manipulation !important;
}
.player-row.highlighted.player-inactive { opacity: 1; filter: grayscale(0); }

/* --- Math Input Controls --- */
.math-input-wrapper {
